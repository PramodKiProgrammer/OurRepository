<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <FrameLayout
                android:id="@+id/frame"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:layout_marginLeft="10dp">

                <ImageView
                    android:id="@+id/image_view_list_video"
                    android:layout_width="125dp"
                    android:layout_height="125dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginRight="16dp"
                    android:src="@mipmap/ic_launcher" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_play_circle_outline_black_24dp" />

            </FrameLayout>

            <TextView
                android:id="@+id/txt_list_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/frame"
                android:layout_marginTop="10dp"
                android:text="This is What You Came For"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_list_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_list_title"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/frame"
                android:text="This is What You Came For" />

            <ImageButton
                android:id="@+id/image_button_list_download"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/frame"
                android:layout_alignParentRight="true"
                android:layout_margin="10dp"
                android:background="#f9f7f7"
                android:src="@drawable/ic_file_download_black_24dp" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>